<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/relativeLayout"
    android:onClick="abrirRelativeLayout"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/absoluteLayout"
        android:onClick="abrirAbsoluteLayout"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frameLayout"
        android:onClick="abrirFrameLayout"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TableLayout"
        android:onClick="abrirTableLayout"/>


</LinearLayout>
